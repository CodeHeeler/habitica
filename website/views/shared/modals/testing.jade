include ../avatar/generated_avatar
include ./achievements

script(type='text/ng-template', id='modals/testing.html')
  .modal-content(style='min-width:28em')
    .modal-body.text-center(style='padding-bottom:0')
      h3=env.t('guildReminderTitle')
      br
      .scene_guilds.center-block
      br
      h4(ng-show="User.user._ABtests.guildReminder.indexOf('text1') !== -1")=env.t('guildReminderText1')
      h4(ng-show="User.user._ABtests.guildReminder.indexOf('text1') === -1")=env.t('guildReminderText2')
    .modal-footer(style='padding-top:0')
      .container-fluid
        .row
          .col-xs-6.text-center
            button.btn-lg.btn-default(ng-click='$close()')=env.t('guildReminderDismiss')
          .col-xs-6.text-center
            button.btn-lg.btn-primary(ng-click='$close()')=env.t('guildReminderCTA')
